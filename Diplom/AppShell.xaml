<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Diplom.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Diplom"
    xmlns:micons="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:views="clr-namespace:Diplom.Views"
    Title="{Binding LocalizationResourceManager[AppName]}"
    BackgroundColor="Red"
    BindingContext="{DynamicResource ViewModel}"
    FlyoutBackgroundColor="Red">
    <Shell.Resources>
        <local:AppShellViewModel x:Key="ViewModel" />
    </Shell.Resources>
    <Shell.FlyoutHeader>
        <Image Source="app_icon1.jpg" />
    </Shell.FlyoutHeader>
    <ShellContent
        Title="{Binding LocalizationResourceManager[Main]}"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"
        Shell.NavBarIsVisible="True">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="MaterialRegular"
                Glyph="{x:Static micons:MaterialRegular.Home}"
                Color="{AppThemeBinding Dark=Red,
                                        Light=Black}" />
        </ShellContent.Icon>
    </ShellContent>
    <ShellContent
        Title="{Binding LocalizationResourceManager[Settings]}"
        ContentTemplate="{DataTemplate views:MainPage}"
        Icon="settings.svg"
        Route="Settings"
        Shell.NavBarIsVisible="True" />
</Shell>
